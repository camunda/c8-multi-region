{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>camunda/infraex-common-config:default.json5"],
  "packageRules": [
    {"matchPackageNames": ["k8s.io/apimachinery"], "allowedVersions": "0.28.x"},
    {"enabled": false, "matchPackageNames": ["*"]},
    {
      "description": "Allow patch and minor updates for Camunda Helm chart",
      "matchPackageNames": [
        "camunda-platform",
        "camunda/camunda-platform-helm"
      ],
      "matchUpdateTypes": ["patch", "minor"],
      "enabled": true
    }
  ]
}
